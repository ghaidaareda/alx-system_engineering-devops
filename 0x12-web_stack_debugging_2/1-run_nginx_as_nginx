#!/usr/bin/env bash
# Bash script running as the nginx user
sudo apt-get -y install nginx
sudo sed -i 's/listen 80 default_server;/listen 8080 default_server;/g' /etc/nginx/sites-available/default
chmod 644 /etc/nginx/nginx.conf
sudo sed -i 's/^user .*/user nginx;/'  /etc/nginx/nginx.conf
sudo -u service nginx restart
